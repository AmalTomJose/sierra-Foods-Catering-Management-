
  <!-- Product Grid -->
  <div class="row product-container">
    <% for (const product of products) { %>
      <div class="col-xl-3 col-lg-4 col-md-6 wow fadeInUp" data-wow-delay="0.3s">
        <div class="product-item">
          <div class="position-relative bg-light overflow-hidden">
            <% if (product.item_image && product.item_image.length > 0) { %>
              <a class="text-body" href="/product/<%= product._id %>"><img class="img-fluid w-100" src="/admin-assets/imgs/productIMG/<%= product.item_image[0] %>" alt=""></a>
            <% } else { %>
              <a class="text-body" href="/product/<%= product._id %>"><img class="img-fluid w-100" src="/path/to/default-image.jpg" alt="No image"></a>
            <% } %>
            <div class="bg-secondary rounded text-white position-absolute start-0 top-0 m-4 py-1 px-3">New</div>
          </div><div class="text-center p-4">
            <a class="d-block h5 mb-2" href="/product/<%= product._id %>"><%= product.item_name %></a>
          
            <% if (product.appliedOffer) { %>
              <div>
                <span class="text-danger fw-bold me-2">
                  ₹<%= product.offerPrice %>
                </span>
                <del class="text-muted small">₹<%= product.item_price %></del>
              </div>
              <span class="badge bg-success mt-1">
                <%= product.appliedOffer.discountType === 'percentage'
                      ? product.appliedOffer.discountValue + '% OFF'
                      : '₹' + product.appliedOffer.discountValue + ' OFF' %>
              </span>
            <% } else { %>
              <div>
                <span class="text-primary fw-bold">
                  ₹<%= product.item_price %>
                </span>
              </div>
            <% } %>
          </div>
          
          <div class="d-flex border-top">
            <small class="w-50 text-center border-end py-2">
              <a class="text-body" href="/product/<%= product._id %>">
                <i class="fa fa-eye text-primary me-2"></i> View
              </a>
            </small>
            <small class="w-50 text-center border-end py-2">
              <a class="text-body" href="javascript:void(0)" onclick="addToWishlist('<%= product._id %>')">
                <i class="bi bi-heart-fill text-success me-2"></i> Wishlist
              </a>
            </small>
          </div>
          
        </div>
      </div>
    <% } %>


  </div>

    <!-- Pagination -->
    <% if (totalPages > 1) { %>
      <nav class="mt-4" aria-label="Page navigation">
        <ul class="pagination justify-content-center">
          <% if (currentPage > 1) { %>
            <li class="page-item">
              <a  class="page-link pagination-link" data-page="<%= currentPage - 1 %>">&laquo;</a>
            </li>
          <% } %>
    
          <% for (let i = 1; i <= totalPages; i++) { %>
            <li class="page-item <%= i === currentPage ? 'active' : '' %>">
              <a class="page-link pagination-link" data-page="<%= i %>"><%= i %></a>
            </li>
          <% } %>
    
          <% if (currentPage < totalPages) { %>
            <li class="page-item">
              <a  class="page-link pagination-link" data-page="<%= currentPage + 1 %>">&raquo;</a>
            </li>
          <% } %>
        </ul>
      </nav>
    <% } %>
    <script>

  function addToWishlist(productId) {
    fetch('/addToWishlist', {
      method: 'POST',
      headers: {
        'Content-Type': 'application/json'
      },
      body: JSON.stringify({ productId })
    })
    .then(response => response.json())
    .then(data => {
      Swal.fire({
        title: data.success ? "Success!" : "Error!",
        text: data.success ? data.message : data.error || "Failed to add to wishlist.",
        icon: data.success ? "success" : "error"
      });
    })
    .catch(error => {
      console.error('Wishlist Error:', error);
      Swal.fire("Error!", "Something went wrong.", "error");
    });
  }

    </script>


