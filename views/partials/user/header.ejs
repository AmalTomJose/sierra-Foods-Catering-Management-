<!-- SweetAlert (for cancelBooking) -->
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
  function cancelBooking(bookingId) {
    Swal.fire({
      title: 'Cancel Booking?',
      input: 'textarea',
      inputLabel: 'Reason for cancellation',
      inputPlaceholder: 'Type your reason...',
      showCancelButton: true,
      confirmButtonText: 'Submit',
      cancelButtonText: 'Close',
      inputValidator: (val) => !val && 'Please enter a reason'
    }).then(result => {
      if (!result.isConfirmed) return;
      fetch(`/cancel/${bookingId}`, {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ reason: result.value })
      })
      .then(r=>r.json())
      .then(data=>{
        if (data.success) Swal.fire('Cancelled','Your booking has been cancelled.','success').then(()=>location.reload());
        else Swal.fire('Error', data.error||'Cancellation failed','error');
      }).catch(()=>Swal.fire('Error','Something went wrong','error'));
    });
  }
</script>

<!-- Auto-close collapse on mobile: robust event delegation -->
<script>
  document.addEventListener('DOMContentLoaded', function () {
    const navbarCollapse = document.getElementById('navbarCollapse');

    // nothing to do if collapse not present
    if (!navbarCollapse) return;

    // helper: collapse the navbar (only on small screens)
    function hideCollapseIfNeeded() {
      if (window.innerWidth >= 992) return; // keep open on desktop
      const instance = bootstrap.Collapse.getInstance(navbarCollapse) || new bootstrap.Collapse(navbarCollapse, { toggle: false });
      instance.hide();
    }

    // Click delegation inside collapse
    navbarCollapse.addEventListener('click', function (ev) {
      // find nearest clickable ancestor inside collapse (a or button)
      const clickable = ev.target.closest('a, button');
      if (!clickable) return;

      // If clickable is the dropdown toggle (opens profile dropdown), do NOT collapse
      if (clickable.matches('[data-bs-toggle="dropdown"], .dropdown-toggle')) {
        return;
      }

      // If the click is on an anchor with href starting with "javascript:" or "#", still collapse (unless it's dropdown toggle)
      // If anchor has attribute data-bs-toggle (other handlers), skip only if it's dropdown (already handled)
      hideCollapseIfNeeded();
    });

    // Also collapse when selecting an item inside a dropdown menu (user clicked profile menu item)
    const dropdownMenus = navbarCollapse.querySelectorAll('.dropdown-menu .dropdown-item');
    dropdownMenus.forEach(item => {
      item.addEventListener('click', function () {
        hideCollapseIfNeeded();
      });
    });

    // Optional: also collapse when any form submit button inside collapse is clicked
    const forms = navbarCollapse.querySelectorAll('form');
    forms.forEach(f => {
      f.addEventListener('submit', () => hideCollapseIfNeeded());
    });
  });
</script>
