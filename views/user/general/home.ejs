        <script>
          Swal.fire({
            icon: 'success',
            title: 'Success!',
            text: '<%= success[0] %>',
          });
        </script>
      <% } %>
      

        <% if (error && error.length > 0) { %>
            <script>
          Swal.fire({                                                   
            icon: 'error',
            title: 'Oops!',
            text: '<%= error[0] %>',
          });
        </script>
        <% } %>
 