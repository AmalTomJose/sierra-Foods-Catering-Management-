
<link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap5.min.css">
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<section class="content-main">
    <div class="content-header">
        <div>
            <h2 class="content-title card-title">Order detail</h2>
            <p>Details for Order ID: <%= order._id %></p>
            </div>
            </div>
            <div class="card">
            <header class="card-header">
            <div class="row align-items-center">
            <div class="col-lg-6 col-md-6 mb-lg-0 mb-15">
            <span>
            <i class="material-icons md-calendar_today"></i><br>
        
            <small class="text-muted">Ordered Date: </small><b> <%= new Date(order.orderDate).toLocaleDateString() %></b>
            </span> <br>
            <small class="text-muted">Order ID: <%= order._id %></small><br>
            <small class="text-muted">Order Status: </small><b class="">
            <% if (order.status == 'pending') { %>
            <span class="badge badge-pill badge-soft-warning"><%= order.status %></span>
            <% } else if (order.status == 'confirmed') { %>
            <span class="badge badge-pill badge-soft-warning"><%= order.status %></span>
            <% } else if (order.status == 'shipped') { %>
            <span class="badge badge-pill badge-soft-dark"><%= order.status %></span>
            <% } else if (order.status == 'cancelled') { %>
            <span class="badge badge-pill badge-soft-dark"><%= order.status %></span>
            <% } else if (order.status == 'delivered') { %>
            <span class="badge badge-pill badge-soft-success"><%= order.status %></span>
            <% } else if (order.status == 'approved') { %>
            <span class="badge badge-pill badge-soft-success"><%= order.status %></span>
            <% } else { %>
            <span class="badge badge-pill badge-soft-danger"><%= order.status %></span>
            <% } %>
            <br>
            
            <small class="text-muted">Delivery Date: </small><b><%= new Date(order.booking.eventDate).toLocaleDateString() %></b>
            </div>
            
                    <div class="col-lg-6 col-md-6 ms-auto text-md-end">

                        
                      <% if (order.refundStatus !== undefined) { %>
                        <label for="refundStatusDropdown" class="form-label mt-3">Refund Status</label>
                        <select id="refundStatusDropdown" class="form-select d-inline-block mb-lg-0 mb-15 mw-200">
                          <option value="none" <%= order.refundStatus === 'none' ? 'selected' : '' %>>None</option>
                          <option value="requested" <%= order.refundStatus === 'requested' ? 'selected' : '' %>>Requested</option>
                          <option value="approved" <%= order.refundStatus === 'approved' ? 'selected' : '' %>>Approved</option>
                        </select>
                      
                        <button class="btn btn-success" onclick="saveRefundStatus('<%= order._id %>')">Update Refund</button>
                   
                              <script>
                                function saveRefundStatus(orderId) {
                                
                                  const selectedStatus = document.getElementById("refundStatusDropdown").value;
                                  console.log(selectedStatus)
                              
                                  fetch('/admin/orderstatus', {
                                    method: 'POST',
                                    headers: {
                                      'Content-Type': 'application/json'
                                    },
                                    body: JSON.stringify({ orderId, status: selectedStatus })
                                  })
                                  .then(response => {
                                    if (!response.ok) throw new Error('Status update failed');
                                    return response.json();
                                  })
                                  .then(data => {
                                    Swal.fire({
                                      icon: 'success',
                                      title: 'Order Status Updated',
                                      text: `Order status changed to ${data.updatedStatus}`,
                                      confirmButtonColor: '#3085d6',
                                      confirmButtonText: 'OK'
                                    }).then(() => {
                                      location.reload(); // optional: reload to reflect status update
                                    });
                                  })
                                  .catch(error => {
                                    console.error(error);
                                    Swal.fire({
                                      icon: 'error',
                                      title: 'Update Failed',
                                      text: 'There was an error updating the order status. Please try again.',
                                      confirmButtonColor: '#d33',
                                    });
                                  });
                                }
                              </script>
                              
                              
                    
            </div>
        </header>
            <div class="card-body">
                <div class="row mb-50 mt-20 order-info-wrap">
                    <div class="col-md-4">
                        <article class="icontext align-items-start">
                            <span class="icon icon-sm rounded-circle bg-primary-light">
                                <i class="text-primary material-icons md-person"></i>
                            </span>
                            <div class="text">
                                <h6 class="mb-1">Customer</h6>
                                <p class="mb-1">
                                    <%=order.user.firstname%> <br>
                                        <%=order.user.phoneno%>
                                </p>
                                <br>
                                <a href="#">View profile</a>
                            </div>
                        </article>
                    </div>
                    <div class="col-md-4">
                        <article class="icontext align-items-start">
                            <span class="icon icon-sm rounded-circle bg-primary-light">
                                <i class="text-primary material-icons md-local_shipping"></i>
                            </span>
                            <div class="text">
                                <h6 class="mb-1">Order info</h6>
                                <p class="mb-1">
                                    Shipping: Fargo express <br> Pay method: <%=order.paymentMethod %> <br> Status:
                                        <%=order.status %>
                                </p>
                                <a href="#">Download info</a>
                            </div>
                        </article>
                    </div>
                    <div class="col-md-4">
                        <article class="icontext align-items-start">
                            <span class="icon icon-sm rounded-circle bg-primary-light">
                                <i class="text-primary material-icons md-place"></i>
                            </span>
                            <div class="text">
                                <h6 class="mb-1">Deliver to</h6>
                                <p class="mb-1">
                                    Event Date: <%= order.booking.eventDate %><br>
                Event Type: <%= order.booking.eventType %><br>
                Guest Count: <%= order.booking.guestCount %><br>
                Event Place: <%= order.booking.eventPlace %><br>
                Event Time: <%= order.booking.eventTime %><br>
                District: <%= order.booking.eventDistrict %><br>
                Pincode: <%= order.booking.eventPincode %>
                                </p>
                                <a href="#">View profile</a>
                            </div>
                        </article>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-11">
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                    <tr>
                                      <th width="30%">Product</th>
                                      <th width="15%">Unit Price</th>
                                      <th width="10%">Quantity</th>
                                      <th width="15%">Item Status</th>
                                      <th width="30%">Refund Status</th>
                                      <th width="15%" class="text-end">Total</th>
                              
                                    </tr>
                                </thead>
                                <% let subtotal = 0; %>
                                <% order.items.forEach(function(item) { %>
                                  <% if (item.product) { %>
                                    <% let total = item.product.discount_price * item.quantity; subtotal += total; %>
                                    <tr>
                                      <td>
                                        <a class="itemside" href="#">
                                          <div class="left">
                                            <img src="/admin-assets/imgs/productIMG/<%= item.product.item_image[0] %>" class="img-sm" alt="Product image">
                                          </div>
                                          <div class="info">
                                            <h6 class="mb-0"><%= item.product.item_name %></h6>
                                          </div>
                                        </a>
                                      </td>
                                      <td><%= item.quantity %></td>
                                      <td><%= item.product.discount_price %></td>
                                      <td>
                                       <%=item.status%>
                                      </td>
                                      <td>
                                        <div class="input-group input-group-sm">
                                          <select class="form-select item-status-dropdown" data-order-id="<%= order._id%>" data-item-id="<%= item._id %>">
                                            <option value="none" <%= item.refundStatus === 'none' ? 'selected' : '' %>>None</option>
                                            <option value="requested" <%= item.refundStatus === 'requested' ? 'selected' : '' %>>Requested</option>
                                            <option value="approved" <%= item.refundStatus === 'approved' ? 'selected' : '' %>>Approved</option>
                                          </select>
                                          <button class="btn btn-outline-success" onclick="updateItemRefundStatus('<%= order._id %>', '<%= item._id %>')">Save</button>
                                        </div>
                                      </td>
                                      
                                      

                                      <td><%= total %></td>
                                    </tr>
                                  <% } else { %>
                                    <tr>
                                      <td colspan="4" class="text-danger">Product not found (may have been deleted)</td>
                                    </tr>
                                  <% } %>
                                <% }); %>
                                
<tr>
  <td colspan="4">
    <article class="float-end">
      <dl class="dlist">
        <dt>Subtotal:</dt>
        <dd>₹<%= subtotal %></dd>
      </dl>
      <dl class="dlist">
        <dt>Shipping cost:</dt>
        <dd>₹0.00</dd>
      </dl>
      <dl class="dlist">
        <dt>Grand total:</dt>
        <dd><b class="h5">₹<%= subtotal %></b></dd>
      </dl>
      <dl class="dlist">
        <dt>Status:</dt>
        <dd><%= order.status %></dd>
      </dl>
    </article>
  </td>
</tr>

                            </table>
                        </div> <!-- table-responsive// -->
                    </div>


                </div>
            </div>
        </div>

    </section>

    <% } else { %>
        <p>Order not found</p>
      <% } %>


      <script>
        function updateItemRefundStatus(orderId, itemId) {
          const select = document.querySelector(`select[data-order-id="${orderId}"][data-item-id="${itemId}"]`);
          const status = select.value;
      
          fetch('/admin/update-item-status', {
            method: 'POST',
            headers: {
              'Content-Type': 'application/json'
            },
            body: JSON.stringify({ orderId, itemId, status })
          })
          .then(res => {
            if (!res.ok) throw new Error('Failed to update');
            return res.json();
          })
          .then(data => {
            Swal.fire({
              icon: 'success',
              title: 'Status Updated',
              text: `Item Refund status changed to "${data.updatedStatus}"`,
              confirmButtonColor: '#3085d6'
            });
          })
          .catch(err => {
            Swal.fire({
              icon: 'error',
              title: 'Update Failed',
              text: 'Something went wrong while updating item status.',
              confirmButtonColor: '#d33'
            });
          });
        }
      </script>
      