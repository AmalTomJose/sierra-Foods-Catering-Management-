    border-radius: 8px;
    margin: 0 2px;
    transition: all 0.3s ease;
  }
  .dataTables_paginate .paginate_button:hover {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    border-color: transparent;
    color: #fff !important;
  }
  .dataTables_paginate .paginate_button.current {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    border-color: transparent;
    color: #fff !important;
  }
</style>

<section class="content-main mt-4">
  <div class="container-fluid">
    <!-- HEADER -->
    <div class="d-flex justify-content-between align-items-center mb-4">
      <div>
        <h3 class="fw-bold text-primary mb-0">
          <i class="bi bi-box-seam me-2"></i>Product Management
        </h3>
        <small class="text-muted">Manage, edit, and organize your products</small>
      </div>
      <a href="/admin/addproduct" class="btn btn-primary rounded-pill px-3">
        <i class="bi bi-plus-circle me-1"></i> Add New Product
      </a>
    </div>

    <!-- FILTER BAR -->
    <div class="card shadow-sm border-0 mb-4">
      <div class="card-body d-flex flex-wrap gap-3 align-items-center justify-content-end">
        <div>
          <select class="form-select" id="statusFilter" onchange="filterTable()">
            <option value="">All Status</option>
            <option value="active">Active</option>
            <option value="blocked">Blocked</option>
          </select>
        </div>
      </div>
    </div>

    <!-- TABLE CARD -->
    <div class="card shadow border-0">
      <div class="card-body">
        <table id="products" class="table table-hover align-middle">
          <thead class="table-light">
            <tr>
              <th>Status</th>
              <th>Product Name</th>
              <th>Price (â‚¹)</th>
              <th class="text-center">Actions</th>
            </tr>
          </thead>
          <tbody>
            <% products.slice().reverse().forEach(product => { %>
              <tr>
                <td>
                  <% if (product.item_status) { %>
                    <span class="badge bg-success-subtle text-success">
                      <i class="bi bi-check-circle-fill me-1"></i> Active
                    </span>
                  <% } else { %>
                    <span class="badge bg-danger-subtle text-danger">
                      <i class="bi bi-slash-circle-fill me-1"></i> Blocked
                    </span>
                  <% } %>
                </td>

                <td class="fw-semibold"><%= product.item_name %></td>
                <td>â‚¹<%= product.item_price.toFixed(2) %></td>

                <td class="text-center">
                  <div class="btn-group">
                    <button
                      class="btn btn-sm btn-outline-danger"
                      onclick="confirmDelete(event, '<%= product._id %>')"
                    >
                      <i class="bi bi-trash3"></i>
                    </button>

                    <a
                      href="/admin/editProduct?id=<%= product._id %>"
                      class="btn btn-sm btn-outline-secondary"
                    >
                      <i class="bi bi-pencil-square"></i>
                    </a>

                    <% if (product.item_status) { %>
                      <button
                        onclick="ProductUnlist('<%= product._id %>')"
                        class="btn btn-sm btn-outline-warning"
                      >
                        <i class="bi bi-lock-fill me-1"></i> Block
                      </button>
                    <% } else { %>
                      <button
                        onclick="ProductUnlist('<%= product._id %>')"
                        class="btn btn-sm btn-outline-success"
                      >
                        <i class="bi bi-unlock-fill me-1"></i> Unblock
                      </button>
                    <% } %>
                  </div>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</section>

<!-- âœ… SCRIPTS -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.datatables.net/1.13.7/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<script>
  // âœ… Initialize DataTable
  $(document).ready(function () {
    new DataTable("#products", {
      order: [[1, "asc"]],
      lengthMenu: [5, 10, 25, 50],
      pageLength: 7,
      language: {
        search: "ðŸ”",
        searchPlaceholder: "Search table...",
      },
    });
  });

  // âœ… Filter by status
  function filterTable() {
    const filter = document.getElementById("statusFilter").value.toLowerCase();
    const rows = document.querySelectorAll("#products tbody tr");

    rows.forEach((row) => {
      const statusText = row.querySelector("td:first-child").innerText.toLowerCase();
      row.style.display = !filter || statusText.includes(filter) ? "" : "none";
    });
  }

  // âœ… SweetAlert confirm delete
  function confirmDelete(event, productId) {
    event.preventDefault();
    Swal.fire({
      title: "Are you sure?",
      text: "This product will be permanently deleted!",
      icon: "warning",
      showCancelButton: true,
      confirmButtonColor: "#d33",
      cancelButtonColor: "#3085d6",
      confirmButtonText: "Yes, delete it!",
    }).then((result) => {
      if (result.isConfirmed) {
        window.location.href = `/admin/deleteProduct?id=${productId}`;
      }
    });
  }

  // âœ… Block / Unblock Product
  function ProductUnlist(productId) {
    Swal.fire({
      title: "Are you sure?",
      text: "Confirm to perform this action.",
      icon: "warning",
      showCancelButton: true,
      confirmButtonColor: "#3085d6",
      cancelButtonColor: "#d33",
      confirmButtonText: "Yes, confirm!",
    }).then((result) => {
      if (result.isConfirmed) {
        fetch(`/admin/blockProduct?id=${productId}`)
          .then((response) => {
            if (response.ok) {
              Swal.fire({
                title: "Success!",
                text: "Action completed successfully!",
                icon: "success",
                timer: 2000,
                showConfirmButton: false,
              }).then(() => window.location.reload());
            } else {
              Swal.fire("Error!", "Something went wrong.", "error");
            }
          })
          .catch(() => Swal.fire("Error!", "Server error.", "error"));
      }
    });
  }
</script>
