<link rel="stylesheet" href="/css/login.css">

<div class="body">

  <div class="outer-container p-5">
    <h1>Admin Login</h1>

    <form action="/admin" method="post" id="form" class="form-vertical">

      <% if (msg) { %>
        <p style="color: red;"><%= msg %></p>
      <% } %>

      <!-- Email -->
      <div>
        <input 
          type="text" 
          name="email" 
          id="email" 
          class="input-fields" 
          placeholder="Email" 
          onkeyup="validateEmail()">
        <div class="text-danger p-0 ms-5" id="emailError">username is required</div>
      </div>

      <!-- Password -->
      <div>
        <input 
          type="password" 
          name="password" 
          id="password" 
          class="input-fields" 
          placeholder="Password"
          onkeyup="validatePassword()">
        <div class="text-danger p-0" id="passwordError">password is required</div>
      </div>

      <!-- Submit -->
      <div>
        <button type="submit" class="btn btn-secondary rounded-pill py-sm-3 px-sm-5 ms-3">Login</button>
        <div class="text-danger p-0 ms-5" id="formError">please fill all fields</div>
      </div>

    </form>
  </div>
</div>

<script src="/js/login.js"></script>

<!-- SweetAlert messages -->
<% if (success && success.length > 0) { %>
  <script>
    Swal.fire({
      icon: 'success',
      title: 'Success!',
      text: '<%= success[0] %>',
    });
  </script>
<% } %>

<% if (error && error.length > 0) { %>
  <script>
    Swal.fire({
      icon: 'error',
      title: 'Oops!',
      text: '<%= error[0] %>',
    });
  </script>
<% } %>
